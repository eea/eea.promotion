<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="eea">
<body>

<div metal:define-macro="portlet"
     i18n:domain="eea"
     tal:omit-tag=""
     tal:define="promotions here/@@globalPromotion;
                 category python:{'id': 'globalpromo'};
                 display python: promotions and not context.absolute_url().startswith(promotions[0]['url'])">

<div class="shortcut-light" tal:condition="display">
            <metal:portlet use-macro="here/portlet_promotions/macros/portlet" />
</div>
<div class="visualClear"><!-- &nbsp;--></div>
</div>
</body>
</html>

