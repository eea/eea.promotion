<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<head>
<metal:block metal:fill-slot="javascript_head_slot" >
    <script type="text/javascript" src="sectionwidget.js"
        tal:attributes="src string:++resource++promotion_form.js">
    </script>
</metal:block>
</head>

<body>
<div metal:fill-slot="main">

    <h1 tal:content="view/label">Edit Promotion</h1>
    <div class="summary" tal:condition="view/status" tal:content="view/status">Status</div>

    <form class="edit-form" enctype="multipart/form-data" method="post" action="."
        tal:attributes="action request/URL">

        <div class="row" tal:repeat="widget view/widgets">
            <label for="field.name" title="Widget Hint" id="field.name_label"
                tal:attributes="for widget/name; id string:${widget/name}_label; title widget/hint"
                tal:content="widget/label">
                Label
            </label>
            <div tal:condition="widget/error" tal:content="widget/error">
                Error
            </div>
            <div class="field">
                <input tal:replace="structure widget" />
            </div>
        </div>

        <span class="actionButtons" tal:condition="view/availableActions">
            <input tal:repeat="action view/actions" tal:replace="structure action/render" />
        </span>

    </form>

</div>
</body>
</html>
