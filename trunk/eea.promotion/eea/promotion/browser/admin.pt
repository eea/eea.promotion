<metal:block use-macro="here/global_defines/macros/defines" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <style type="text/css" tal:content="string:@import url(${portal_url}/++resource++promotion_admin_view.css);"></style>
    <style type="text/css" tal:content="string:@import url(${portal_url}/++resource++resource.css);"></style>
    <metal:css tal:define="css nocall:here/renderAllTheStylesheets|nothing">
       <tal:block condition="nocall:css">
              <metal:block metal:use-macro="css/macros/cssrenderer">
                <!-- Fetch stylesheets from the CSS Registry -->
              </metal:block>
        </tal:block>
    </metal:css>
</head>    

<body>

<metal:main metal:fill-slot="main">
<tal:main-macro metal:define-macro="main">

    <table class="listing">
        <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Locations</th>
            <th>Frontpage Section</th>
            <th>Themes</th>
        </tr>
        </thead>
        <tbody>
        <tal:promotions tal:define="promotions view/find_promotions"
            tal:repeat="promo promotions">
            <tr tal:define="imgtag nocall:promo/imgtag">
            <td tal:content="structure python:imgtag('icon')">image</td>
            <td><a href="#" tal:attributes="href promo/href" tal:content="promo/title"></a></td>
            <td tal:content="promo/locations">locations</td>
            <td tal:content="promo/frontpage_section">frontpage_section</td>
            <td tal:content="promo/themes">themes</td>
            </tr>
        </tal:promotions>
        </tbody>
    </table>


</tal:main-macro>
</metal:main>

</body>
</html>
